CREATE TABLE CUSTOMER (
CustNo CHAR (11),
CustFirstName VARCHAR(35) NOT NULL,
CustLastName VARCHAR(35) NOT NULL,
CustStreet VARCHAR(35) NOT NULL,
CustLine2 VARCHAR(35),
CustCity VARCHAR(35) NOT NULL,
CustState CHAR(10) NOT NULL,
CustZip CHAR (10)
COSTRAINT PKCustNo PRIMARY KEY(CustNo)

CREATE TABLE INSTRUCTOR (
InstNo CHAR(11),
InstFirstName VARCHAR(35),
InstLastName VARCHAR(35),
InstCost INTEGER(5,2),
InstBal INTEGER (6,2),
InstRating CHAR(3)
CONSTRAINT PKInstNo PRIMARY KEY(InstNo))

CREATE TABLE AIRCRAFT (
AirNo CHAR(11),
AirMod CHAR (10) NOT NULL,
AirCost DECIMAL (10) NOT NULL,
CONSTRAINT PKAirNo PRIMARY KEY(AirNo))

CREATE TABLE FLIGHT
(
FlightNo VARCHAR (25) 
InstNo CHAR(11) 
CustNo CHAR(11)
AirNo CHAR(11)
FlightDate DATE
FlightCost INTEGER (5,2)
CONSTRAINT PKFlightNo
